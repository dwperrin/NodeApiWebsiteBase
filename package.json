{
  "name": "slidetotal-live",
  "description": "SlideTotalLive - SlideTotal Live Online!",
  "version": "0.0.1",
  "author": "D. W. Perrin",
  "license": "UNLICENSED",
  "private": true,
  "repository": {},
  "scripts": {
    "setup": "npm install & cd src/server && typings install",
    "prebuild:dev:server": "npm run vet:server",
    "build:dev:server": "npm run compile:dev:server",
    "postbuild:dev:server": "cpx ./src/server/config/**/*.json ./build/config",
    "compile:dev:server": "tsc -p ./src/server --outDir ./build",
    "compile:dev:server:w": "tsc -w -p ./src/server --outDir ./build",
    "coverage:clean:server": "rimraf test/coverage.html",
    "coverage:server": "npm run server:coverage:clean && npm run server:test -- -c --coverage-path src/server -r html -o test/coverage.html",
    "serve:dev:server": "npm run compile:dev:server && concurrently \"npm run compile:dev:server:w\" \"nodemon ./build/index.js\"",
    "test:server": "lab -T test/lib/transform-tsc.js test/server --verbose --coverage --sourcemaps",
    "vet:server": "tslint ./src/server/**/*.ts -e ./src/server/typings/**/* -t verbose",
    "debugT": "node-debug lab -v -T test/lib/transform-tsc.js test/server --verbose --coverage --sourcemaps -c --coverage-path src/server -r html -o test/testcov.html"
  },
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "boom": "^3.2.2",
    "fs": "0.0.2",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "good-squeeze": "^4.0.0",
    "hapi": "^14.1.0",
    "hapi-auth-jwt2": "^7.0.1",
    "hapi-swagger": "^6.2.2",
    "inert": "^4.0.1",
    "joi": "^9.0.4",
    "jsonwebtoken": "^7.1.7",
    "mongoose": "^4.5.8",
    "nconf": "^0.8.4",
    "path": "^0.12.7",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "code": "^3.0.2",
    "concurrently": "^2.2.0",
    "cpx": "^1.3.2",
    "lab": "^10.9.0",
    "nodemon": "^1.10.0",
    "rimraf": "^2.5.4",
    "tslint": "^3.14.0",
    "typescript": "^1.8.10"
  }
}
